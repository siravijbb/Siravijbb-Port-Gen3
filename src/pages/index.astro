---
import Navbar from '../components/Navbar.astro'
import Layout from '../components/layout.astro'
import Footer from '../components/Footer.astro'
---

<head>
  <Layout
    title="Home"
    ,
    description="Siravij's Website"
    ,
    image="/full-body.webp"
    ,
  />
</head>

<body>
  <main class="mx-auto h-screen overflow-hidden bg-neutral-500">
    <Navbar />
    <div class="-pt-4 -mt-10"><Footer /></div>
    <div
      class="relative flex h-screen w-full flex-col items-center justify-center overflow-hidden"
    >
      <div class="z-10 w-full pl-10 text-left text-4xl text-white lg:-mt-96">
        <div class="mt-32 w-fit rounded-xl bg-gray-900 p-4 md:mt-72 lg:mt-96">
          Welcome to<b class="text-[#ab98ff] underline"> Siravij's</b>
          <span class="block text-xl">I'm Siravij Praevisavakij</span>
        </div>
      </div>

      <div class="z-10 flex pl-10 text-left text-white lg:-mt-96"></div><div
        class="absolute"
      >
        <img
          src="SiravijINTBall.webp"
          alt="It's Me,Siravij!"
          class="mx-auto sm:w-auto sm:h-auto  md:h-screen mb-56"
          id="widget2"
        />
      </div>
    </div>
  </main>
</body>
